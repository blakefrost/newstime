<div class="broadsheet-page" <%= "data-page-id=#{page.id}" if composing? %> style="height: <%= page.pixel_height %>px">
  <a class="anchor" id="<%= page.page_ref %>"></a>

  <% page.groups.each do |group| %>
    <%= render "content/group", group: group %>
  <% end -%>

  <% page.content_items.reject(&:group).each do |content_item| %>
    <%= render_content_item content_item %>
  <% end -%>
</div>
