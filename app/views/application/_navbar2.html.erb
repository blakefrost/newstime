<div class="compose-toolbar">
  <div class="container">
    <div class="newstime-logo">
      <a href="/"><%= render 'newstime_pendulum_logo' %></a>
    </div>
    <nav>
      <ul>
        <%= navbar_li "Editions", editions_path, active_path: editions_path  %>
        <%= navbar_li "Stories", stories_path, active_path: stories_path %>
        <%= navbar_li "Photos", photos_path, active_path: photos_path  %>
        <%= navbar_li "Videos", '/videos', active_path: '/videos'  %>
      </ul>
    </nav>
    <nav class="pull-right">
      <ul>
        <li>
          <span><%= current_user.username %></span>
        </li>
        <li>
          <%= link_to("Sign Out".html_safe , destroy_user_session_path, :method => :delete) %>
        </li>
      </ul>
    </nav>
  </div>
</div>
