<%= javascript_include_tag 'entries' %>
<%= stylesheet_link_tag 'entries' %>

<div class="container">
  <div class="row">
    <div class="col-md-9">
      <% @results.each do |note| %>
        <div class="entry entry-list">
          <h4>
            <a href="/entries<%= note[:path] %>"><%= note[:title] || note[:formatted_date_time] %></a>
            <a href="/entries<%= note.path %>/edit" class="edit">edit</a>
          </h4>
          <div class="entry-body">
            <%= raw(note[:html]) %>
          </div>
          <p><em><%= time_ago_in_words(note[:created_at]) %> ago</em></p>
        </div>
      <% end %>
    </div>
  </div>
</div>
<br><br>
