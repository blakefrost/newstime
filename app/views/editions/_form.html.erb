<%= simple_form_for edition do |f| %>
  <%= f.input :name, hint: "The name of the edition, to refer to in the UI." %>
  <%= f.input :title, hint: "The title to show at the top of the edition." %>
  <%= f.input :layout_name, hint: "The name of the layout module to use." %>
  <%= f.input :default_section_template_name, hint: "Default value inherited by the section when template name isn't set there." %>
  <%= f.button :submit, class: 'btn-default btn-primary' %>
  &nbsp;
  <%= link_to "Cancel", edition_path(@edition) %>
<% end %>
