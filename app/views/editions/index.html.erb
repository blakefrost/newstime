<div class="grid grid24">
  <div class="row">
    <div class="col">
      <br>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>Name</th>
            <th></th>
          </tr>
        </thead>
        <% @editions.each do |edition| %>
          <tr>
            <td><%= link_to edition.name, compose_edition_path(edition) %></td>
            <td><%= link_to "Delete", edition, method: :delete, confirm: "Are you sure?" %></td>
          <tr>
        <% end %>
      </table>

      <%= link_to 'New', new_edition_path %>
    </div>
  </div>
</div>
