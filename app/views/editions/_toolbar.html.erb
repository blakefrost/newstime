<div id="edition-toolbar" class="compose-toolbar">
  <div class="container">
    <div class="newstime-logo">
      <%= render 'newstime_pendulum_logo' %>
    </div>
    <nav>
    <ul>
      <li id="edition-tab">
        <a>Edition</a></li>
      <li id="section-tab">
        <a>Section</a></li>
      <li>
        <%= link_to "Preview", "#{preview_edition_path(@edition)}/#{@section.path}" %>
      </li>
      <li>
        <%= link_to "Download", download_edition_path(@edition) %>
      </li>
    </ul>
    </nav>
    <nav class="pull-right">
      <ul>
        <li>
          <%= link_to current_user.email, edit_user_registration_path %>
        </li>
        <li>
          <%= link_to('Sign Out', destroy_user_session_path, :method => :delete) %>
        </li>
      </ul>
    </nav>
  </div>
</div>
<div class="compose-toolbar-panel" id="edition-tab-panel">
  <div class="container">
    <%= render 'editions/form' %>
  </div>
</div>
<div class="compose-toolbar-panel" id="section-tab-panel">
  <div class="container">
    <%= render 'sections/form', section: @section %>
  </div>
</div>
