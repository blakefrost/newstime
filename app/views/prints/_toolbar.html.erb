<div id="edition-toolbar" class="compose-toolbar">
  <div class="container">
    <div class="newstime-logo">
      <a href="/"><%= render 'newstime_pendulum_logo' %></a>
    </div>
    <nav>
    <ul>
      <li>
        <%= link_to "Edition", compose_edition_path(edition) %>
      </li>
      <li class="disabled">
        <a>Section</a></li>
      <li>
      <li>
        <%= link_to "Preview", "#{preview_edition_path(@edition)}"%>
      </li>
      <li class="active">
        <%= link_to "Prints", edition_prints_path(@edition) %>
      </li>
    </ul>
    </nav>
    <nav class="pull-right">
      <ul>
        <li>
          <span><%= current_user.email %></span>
        </li>
        <li>
          <%= link_to('Sign Out', destroy_user_session_path, :method => :delete) %>
        </li>
      </ul>
    </nav>
  </div>
</div>
