<tr>
  <td>
    <%= link_to show_edition_print_path(edition.to_param, print.version, path: 'main.html') do %>
      <%= image_tag show_edition_print_path(edition.to_param, print.version, path: 'cover.png'), width: 300, title: format_date_and_time(print.created_at) %>
    <% end -%>
  </td>
  <% if print.print_complete? %>
  <% else -%>
    <td><%= format_date_and_time(print.created_at)%></td>
  <% end -%>
  <td><%= print.version %></td>
  <td>
    <% case print.state %>
    <% when 'printing' then %>
      printing<span class="one">.</span><span class="two">.</span><span class="three">.</span>
    <% else %>
      <%= print.state %>
    <% end %>
  </td>

  <td>
    <% if print.initial? %>
    <% elsif print.printing? %>
    <% elsif print.printed? %>
      <%= link_to "Download", download_print_path(print) %> |
      <%= link_to "Attach Signature", "" %>
    <% elsif print.signed? %>
      <%= link_to "Download", download_print_path(print) %> |
      <%= link_to "Publish", "" %>
    <% elsif print.published? %>
      <%= link_to "Download", download_print_path(print) %> |
      <%= link_to "View Dashboard", "" %> |
      <%= link_to "View in Store", "" %>
    <% end %>

  </td>
</tr>
