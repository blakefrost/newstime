<div class="grid grid24">
  <div class="row">
    <div class="col">
      <ul class="action-menu">
        <li>
          <%= link_to "New Print", edition_prints_path, method: 'post' %>
        </li>
      </ul>
      <table class="table">
        <thead>
          <tr>
            <th>Printed At</th>
            <th>Print No.</th>
            <th>Status</th>
            <th>Actions</th>
          </tr>
        </thead>
        <% @prints.each do |print| %>
          <%= render 'print_detail', print: print, edition: @edition %>
        <% end %>
      </table>
    </div>
  </div>
</div>
