<div class="grid grid24">
  <div class="row">
    <div class="col">
      <br>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>Name</th>
            <th>actions</th>
          </tr>
        </thead>
        <% @videos.each do |video| %>
          <tr>
            <td><%= link_to video.name, video %></td>

            <td><%= link_to "Edit", edit_video_path(video) %> /
            <%= link_to "Delete", video, method: :delete, confirm: "Are you sure?" %></td>
          <tr>
        <% end %>
      </table>
      <%= link_to 'New', new_video_path %>
    </div>
  </div>
</div>
