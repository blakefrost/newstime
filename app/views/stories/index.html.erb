<div class="grid grid24">
  <div class="row">
    <div class="col">
      <ul class="action-menu pull-right">
        <li>
          <%= link_to "New Story", new_story_path %>
        </li>
      </ul>
      <table class="table">
        <thead>
          <tr>
            <th>
              Name
            </th>
          </tr>
        </thead>
        <% @stories.each do |story| %>
          <tr>
            <td><%= link_to story.name, story %></td>
          <tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
